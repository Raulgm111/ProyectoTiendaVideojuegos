@model Carrito

<h2>Carrito de compras</h2>

@if (Model.Productos.Count == 0)
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Nombre del producto</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.NombreProducto</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>
                        <form asp-action="EliminarProducto" asp-route-idProducto="@producto.IdProducto" method="post">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total de productos: @Model.TotalProductos()</p>
    <p>Total de precio: @Model.TotalPrecio().ToString("C")</p>

    <form asp-action="VaciarCarrito" method="post">
        <button type="submit">Vaciar carrito</button>
    </form>
}

