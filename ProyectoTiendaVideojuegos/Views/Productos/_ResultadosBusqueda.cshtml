@model List<Producto>

<div id="content" class="bodyCartas">
    <div class="containerCartas">
        @foreach (var item in Model)
        {
            <div class="max-w-xs bg-white shadow-2xl rounded-lg overflow-hidden my-10">
                <div class="px-4 py-2">
                    <h1 class="text-gray-900 font-bold text-3xl uppercase">@item.NombreProducto</h1>
                    <p class="text-gray-600 text-sm mt-1">@item.Genero</p>
                </div>
                <img class="h-50 w-full object-cover mt-2" src="@Url.Content(@item.Imagen)">
                <div class="flex items-center justify-between px-4 py-2 bg-purple-900">
                    <h1 class="text-gray-200 font-bold text-xl">@item.Precio€</h1>
                    <button class="px-3 py-1 font-semibold rounded bn632-hover bn18">Comprar</button>
                </div>
            </div>
        }
    </div>
</div>
