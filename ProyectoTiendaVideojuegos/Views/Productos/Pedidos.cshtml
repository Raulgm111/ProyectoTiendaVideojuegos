@model List<Producto>

@{
    ViewData["Title"] = "Pedidos";
    int precio = 0;
}

<h1>Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Precio
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.NombreProducto
                </td>
                <td>
                    @item.Precio
                    @{
                        precio += item.Precio;
                    }
                </td>
            </tr>
        }
        <tr>
            <td><b>Precio total:</b></td>
            <td>@precio €</td>
        </tr>
    </tbody>
</table>