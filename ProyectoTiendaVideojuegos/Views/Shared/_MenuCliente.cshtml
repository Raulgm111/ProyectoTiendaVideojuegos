@using System.Security.Claims;

@if (Context.User.Identity.IsAuthenticated == false)
{
    <li>
        <a class="text-sm hover:bg-purple-100 text-gray-700 block px-4 py-2" asp-area="" asp-controller="Usuarios" asp-action="Register">
            Nuevo Usuario
        </a>
    </li>
    <li>
        <a class="text-sm hover:bg-purple-100 text-gray-700 block px-4 py-2" asp-area="" asp-controller="Managed" asp-action="LogIn">
            Inciar Sesion
        </a>
    </li>
}
else
{
    <li>
            <div class="font-sans leading-tight bg-grey-lighter p-8 mt-8">
                <div class="max-w-sm mx-auto bg-white rounded-lg overflow-hidden shadow-lg">
                    <div class="bg-cover h-40" style=""></div>
                    <div class="border-b px-4 pb-6">
                        <div class="text-center sm:text-left sm:flex mb-4">
                        <img class="h-32 w-32 rounded-full border-4 border-white -mt-16 mr-4" src="https://www.softzone.es/app/uploads/2018/04/guest.png" alt="">
                            <div class="py-2">
                                <h3 class="font-bold text-2xl mb-1">@Context.User.FindFirstValue("Nombre") @Context.User.FindFirstValue("Apellidos")</h3>
                                <div class="inline-flex text-grey-dark sm:flex items-center">
                                    <svg width="20" height="24" viewBox="0 0 24 24">
                                        <path fill="black" d="M21.1,5H2.9C1.7,5,0.8,5.9,0.8,7v10c0,1.1,0.9,2,2.1,2h18.1c1.2,0,2.1-0.9,2.1-2V7C23.2,5.9,22.3,5,21.1,5z M22,17.1c0,0.6-0.5,1.1-1.1,1.1H2.9C2.4,18.1,2,17.6,2,17V7c0-0.6,0.5-1.1,1.1-1.1h18.1c0.6,0,1.1,0.5,1.1,1.1V17.1z M19.2,9.5l-7.6,5.6c-0.4,0.3-0.9,0.3-1.3,0L4.8,9.5H19.2z" />
                                    </svg>
                                    @Context.User.FindFirst(ClaimTypes.Name).Value
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </li>
    <li>
        <a class="text-sm hover:bg-purple-100 text-gray-700 block px-4 py-2" asp-area="" asp-controller="Managed" asp-action="LogOut">
            Cerrar Sesion
        </a>
